{
  "name": "kosa-backend",
  "version": "1.0.0",
  "description": "KOSA Backend Server with Kafka Integration",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:cache": "jest services/__tests__/cacheService.test.js",
    "test:redis": "jest __tests__/redis-integration.test.js",
    "benchmark:cache": "node scripts/cache-benchmark.js",
    "db:migrate": "node scripts/migrate.js",
    "db:migrate:deploy": "node scripts/migrate.js deploy",
    "db:migrate:reset": "node scripts/migrate.js reset",
    "db:migrate:check": "node scripts/migrate.js check",
    "db:seed": "node scripts/seed.js",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "kafka:start": "docker-compose -f docker-compose.kafka.yml up -d",
    "kafka:stop": "docker-compose -f docker-compose.kafka.yml down",
    "kafka:restart": "npm run kafka:stop && npm run kafka:start",
    "kafka:logs": "docker-compose -f docker-compose.kafka.yml logs -f",
    "kafka:init-topics": "node scripts/init-kafka-topics.js",
    "kafka:setup": "npm run kafka:start && sleep 30 && npm run kafka:init-topics",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node test-swagger.js",
    "docs:serve": "npx http-server docs -p 8080 -o",
    "docs:build": "npm run docs:validate && npm run docs:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@sentry/node": "^7.81.1",
    "@sentry/tracing": "^7.81.1",
    "axios": "^1.6.2",
    "axios-retry": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mysql2": "^3.6.5",
    "opossum": "^8.0.0",
    "pg": "^8.11.3",
    "prisma": "^6.12.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "axios-mock-adapter": "^1.22.0",
    "connect-redis": "^7.1.1",
    "express-session": "^1.18.2",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "swagger-parser": "^10.0.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "kafka",
    "express",
    "socket.io",
    "review-analysis"
  ],
  "author": "KOSA Team",
  "license": "MIT"
}
